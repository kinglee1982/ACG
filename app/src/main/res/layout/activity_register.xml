<?xml version="1.0" encoding="utf-8"?>
<com.monke.immerselayout.ImmerseRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/layout_head" />

    <LinearLayout
        android:id="@+id/ll_welcome"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon_register1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:textSize="22sp"
            android:textColor="@color/black_333"
            android:text="@string/register_weclome"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_below="@id/ll_welcome"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <LinearLayout
            android:id="@+id/ll_areaCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="+"
                android:textColor="@color/black_999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_areaCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_999"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_unfold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ll_areaCode"
            android:src="@mipmap/icon_unfold" />

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_unfold"
            android:background="@color/black_ccc" />

        <EditText
            android:id="@+id/et_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_line"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/hint_phoneNum"
            android:inputType="phone"
            android:textColor="@color/black_333"
            android:textColorHint="@color/black_ccc"
            android:textSize="14sp" />

        <View
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pw"
        android:layout_below="@id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_pw"
            android:background="@color/transparent"
            android:hint="@string/hint_code"
            android:textColor="@color/black_333"
            android:textColorHint="@color/black_ccc"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/ib_verifyCode"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/et_pw"
            android:background="@drawable/shape_gary_bg_5dp"
            android:scaleType="fitXY" />

        <View
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_sendSmsCode"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/rl_pw"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_pink_bg_undefined_5dp"
        android:enabled="false"
        android:text="@string/sendSmsCode"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_hint_text1"
            android:textColor="@color/black_999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_protocol"
            android:textColor="@color/blue_6bb"
            android:textSize="12sp" />

    </LinearLayout>


</com.monke.immerselayout.ImmerseRelativeLayout>
