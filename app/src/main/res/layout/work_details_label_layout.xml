<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <com.donkingliang.labels.LabelsView
        android:id="@+id/work_details_labels_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:labelBackground="@drawable/shape_blue_label_bg"
        app:labelTextColor="@color/blue_6bb"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="15dp"
        app:labelTextPaddingRight="15dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextSize="13sp"
        app:lineMargin="10dp"
        app:wordMargin="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/work_details_waring_msg"
        android:textColor="@color/black_ccc"
        android:textSize="12sp" />
</LinearLayout>
