<?xml version="1.0" encoding="utf-8"?>
<com.monke.immerselayout.ImmerseLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include
        android:id="@+id/head"
        layout="@layout/layout_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:background="@mipmap/icon_abi_golden" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/account_money"
                android:textColor="@color/black_333"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black_333"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tv_freeze"
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_money"
                    android:background="@drawable/shape_blue_bg_5dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="冻结"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:visibility="invisible"/>
            </RelativeLayout>


            <Button
                android:id="@+id/btn_toUpAbi"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="90dp"
                android:layout_marginLeft="45sp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/shape_pink_bg_5dp"
                android:text="@string/account_btn1"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_whoAbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/account_who"
            android:textColor="@color/black_999"
            android:textSize="13sp" />

    </RelativeLayout>

</com.monke.immerselayout.ImmerseLinearLayout>
