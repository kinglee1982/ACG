<?xml version="1.0" encoding="utf-8"?>
<com.monke.immerselayout.ImmerseLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5"
    android:orientation="vertical">

    <com.kcx.acg.views.view.TitleBarView
        android:id="@+id/language_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_src="@mipmap/icon_back"
        app:text="@string/setting_change_language_title" />

    <android.support.v7.widget.RecyclerView
        android:translationY="1dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:background="@color/white"
        android:id="@+id/language_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.monke.immerselayout.ImmerseLinearLayout>
