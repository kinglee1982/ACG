<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/dialog_buy_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/buy_work_dialog_title_msg"
            android:textColor="@color/gray_33"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_buy_waring_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/gray_999"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dialog_buy_coin_layout"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_blue_bg2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/abi_icon" />

            <TextView
                android:id="@+id/dialog_buy_coin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_buy_coin_layout3"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_blue_bg2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/abi_icon" />

            <TextView
                android:id="@+id/dialog_buy_coin_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:text="使用"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_buy_coin_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_buy_coin_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:text="180 A币购买"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/dialog_buy_insufficient_coin_btn"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_pink_bg3"
            android:text="@string/dialog_freeze_coin_unused_msg"
            android:textColor="@color/pink_ff8"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_buy_can_not_btn"
            style="@style/dialog_btn"
            android:background="@drawable/selector_blue_btn"
            android:enabled="false"
            android:text="@string/dialog_can_not_buy_msg"
            android:textColor="@color/gray_999"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dialog_buy_open_vip_layout"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_pink_bg2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_vip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/dialog_open_vip_msg"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_buy_open_vip2_layout"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_pink_bg2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_vip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_buy_open_vip2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open_vip_msg"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:text="@string/dialog_open_vip_msg3"
                    android:textColor="@color/gray_fcd"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_buy_coin2_layout"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_blue_bg2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/abi_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/buy_of_coin_dialog_btn_msg"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/dialog_buy_count_down_layout"
            style="@style/dialog_btn"
            android:layout_height="45dp"
            android:background="@drawable/shape_pink_bg2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_remind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/dialog_be_free_msg"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/dialog_buy_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/buy_work_dialog_prompt_msg"
            android:textColor="@color/gray_999"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_buy_works_dismiss_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/icon_delete" />
</FrameLayout>
