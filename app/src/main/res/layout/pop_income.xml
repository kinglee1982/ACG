<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/white">

    <Button
        android:id="@+id/btn_totalIncome"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_pink_bg_5dp_income"
        android:text="@string/incomeDetail_totalIncome"
        android:textColor="@color/pink_hint"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_generalizeIncome"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_gary_bg_5dp"
        android:text="@string/incomeDetail_generalizeIncome"
        android:textColor="@color/black_666"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_productionIncome"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@drawable/shape_gary_bg_5dp"
        android:text="@string/incomeDetail_productionIncome"
        android:textColor="@color/black_666"
        android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
