<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5"
    android:orientation="vertical">

    <!-- <android.support.design.widget.TabLayout
         android:id="@+id/find_fragment_tablayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:tabContentStart="100dp"
         app:tabGravity="center"
         app:tabIndicatorColor="@color/red"
         app:tabMode="fixed" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:gravity="center">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/find_fragment_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tl_indicator_color="@color/white"
            app:tl_indicator_height="1.5dp"
            app:tl_indicator_margin_bottom="6dp"
            app:tl_indicator_width="15dp"
            app:tl_tab_padding="15dp"
            app:tl_textsize="16sp"
            app:tl_tab_space_equal="false"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="#FFD7E4"
            app:tl_underline_color="@color/white"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/find_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
